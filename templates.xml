<openerp>
    <data>
        <!-- Inherit invoice report (from module account) -->
        <template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">
        <!-- Finds the ft.amount field and add (line to add to invoice pdf) text with a lightgrey background after it -->
        <xpath expr="//span[@t-field='t.amount']" position="after">
                <tr style="background-color:lightgray;">
                    <th>line to add to invoice pdf</th>
                </tr>
        </xpath>
        </template>
    </data>
</openerp>
